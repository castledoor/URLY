<h1>URLYTINY!</h1>
  <div id="user_header">
    <% if current_user %>
      Logged in as <%= current_user.email %>.
      <%= link_to "Log Out", logout_path %>
      <%= link_to "View Link Stats", link_stats_path %>
    <% else %>
      <%= link_to "Sign Up", signup_path %>
      <%= link_to "Log In", login_path %>
    <% end %>
  </div>



<%= render 'urls/form' %>


<% if @url.errors.any? %>
  <h3>Please correct these problems:</h3>
  <ul>
    <% @url.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>                              
  </ul>
<% end %>

<div id="shorturl"></div>