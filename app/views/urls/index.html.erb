<div class="row"> 
  <div class='background'>
    <h1 class="title"><%= image_tag("URLY.png", :class => "logo") %></h1>
  </div>
 </div>


<div class="row"> 
  <div class="small-3 large-3 columns">
    <p id="view"><%= link_to "View all URLYs", link_stats_path %></p>
      <!--   <li><a href="#">Link 3</a></li>
      <li><a href="#">Link 4</a></li> -->
    <div id="user_header">
      <% if current_user %>
        Logged in as <%= current_user.email %>.
        <%= link_to "Log Out", logout_path %>
        
      <% else %>
        <%= link_to "Sign Up", signup_path %>
        <%= link_to "Log In", login_path %>
      <% end %>
  </div>

  <div class="small-6 large-9 columns">
    <div id='content'>
      <%= render 'urls/form' %>
      <% if @url.errors.any? %>
        <h3>Please correct these problems:</h3>
        <ul>
          <% @url.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>                              
        </ul>
      <% end %>
     <div id="shorturl"></div>
    </div>
  </div>
</div>
 

